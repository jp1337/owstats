    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="/stylesheets/owstats.min.css">

    <style>
        div#preloader {
            position: fixed;
            left: 0;
            top: 0;
            z-index: 9999;
            width: 100%;
            height: 100%;
            overflow: visible;
            background: #fff url('/images/logo.png') no-repeat center center;
            -webkit-animation: breathing 2s ease infinite;
            -moz-animation: breathing 2s ease infinite;
            animation: breathing 2s ease infinite;
        }

        @-webkit-keyframes breathing {
            0% {
                background-size: 5em 5em;
            }
            50% {
                background-size: 4em 4em;
            }
            100% {
                background-size: 5em 5em;
            }
        }

        @-moz-keyframes breathing {
            0% {
                background-size: 5em 5em;
            }
            50% {
                background-size: 4em 4em;
            }
            100% {
                background-size: 5em 5em;
            }
        }

        @keyframes breathing {
            0% {
                background-size: 5em 5em;
            }
            50% {
                background-size: 4em 4em;
            }
            100% {
                background-size: 5em 5em;
            }
        }

        .row-hero-filter img {
            height: 100%;
            width: 100%;
            border-radius: 15px;
        }

        .row-hero-filter img:hover {
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div id="preloader"></div>